@model IEnumerable<WebApplication1.Models.Wiadomosci>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Wiadomości</h2>

<p>
    @Html.ActionLink("Utwórz nową wiadomość", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Treść")
        </th>
        <th>
            @Html.DisplayName("Odbiorca")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tresc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Czytelnik.Imie)&nbsp;
            @Html.DisplayFor(modelItem => item.Czytelnik.Nazwisko)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
