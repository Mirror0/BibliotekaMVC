@model WebApplication1.Models.Czasopismo

@{
    ViewBag.Title = "Delete";
}

<h2>Usuń Czasopismo</h2>

<h3>Czy napewno chcesz usunąć tą pozycje?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tytuł")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tytul)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

        <dt>
            @Html.DisplayName("Ilość stron")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Strony)
        </dd>

        <dt>
            @Html.DisplayName("Autor")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Autor.Imie) @:&nbsp;
            @Html.DisplayFor(model => model.Autor.Nazwisko)
        </dd>

        <dt>
            @Html.DisplayName("Wydawca")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wydawca.Nazwa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }
</div>
